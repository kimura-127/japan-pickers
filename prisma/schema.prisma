generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Float
  image_url   String?
  capacity    Int
  features    String[]  // PostgreSQLは配列型をサポートしているので戻す
  slug        String    @unique
  bookings    Booking[]
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}

model Booking {
  id         String   @id @default(uuid())
  vehicleId  String
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  userId     String   // auth.usersテーブルのIDと紐付け
  startDate  DateTime
  endDate    DateTime
  userName   String
  userEmail  String
  userPhone  String
  status     String   @default("pending")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([vehicleId])
  @@index([userId])
}
